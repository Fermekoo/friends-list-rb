<%= link_to 'back', todo_index_path%>
<br><br>
<%= form_with model: @todo, url: todo_store_path do |f|%>
    <label for="task">Task</label>
    <%= f.text_field :task, placeholder: 'task name'%>
    <br>
    <br>
    <label for="Deadline">Deadline</label>
    <%= f.date_field :deadline%>
    <br>
    <br>
    <label for="status">Status</label>
    <%= f.select :status, [['Selesai', true], ['Belum Selesai', false]]%>
    <br>
    <br>
    <%= f.submit 'Create' %>
<% end %>